PATH="$PATH:/opt/local/bin:/usr/local/bin:/usr/local/subversion/bin:/sw/bin"
INSTALLER="installSoftwareMenu.sh"
VERSION="1.0b2.2"
cd "$BUILT_PRODUCTS_DIR"
mkdir -p "dist"
cd "dist"
cat "$SOURCE_ROOT/script/installSoftwareMenu.sh" | sed -e "s/MYVERSIONSTRINGHERE/$VERSION/" > "$INSTALLER"
chmod +x "$INSTALLER"
ditto -c -k --rsrc --keepParent ../SoftwareMenu.frappliance "SoftwareMenu_$VERSION.zip"
cp ../SoftwareMenu.frappliance/Contents/Resources/LICENSE.txt LICENSE.txt
cd ..
makeself --nocomp --nocrc --nox11 dist/ "SoftwareMenu-$VERSION.sh" "SoftwareMenu $VERSION" "./$INSTALLER"
